<script>
  $(document).ready(function () {
    $('.director-select2').select2({
      ajax: {
        url: '/api/director/select2',
        dataType: 'json',
        delay: 250,
      },
      placeholder: 'Select a director',
      width: '100%',
      minimumInputLength: 3,
    });
  });
</script>
